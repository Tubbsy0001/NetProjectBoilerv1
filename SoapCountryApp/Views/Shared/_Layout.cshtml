<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SoapCountryApp</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header class="border-bottom mb-4">
        <div class="container d-flex flex-column flex-sm-row justify-content-between align-items-sm-center py-3">
            <a class="navbar-brand fw-semibold" asp-controller="Soap" asp-action="Index">SoapCountryApp</a>
            <span class="text-muted small">SOAP contract explorer</span>
        </div>
    </header>
    <div class="container pb-5">
        <main role="main">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top text-muted py-3">
        <div class="container small">
            &copy; @DateTime.UtcNow.Year SoapCountryApp
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
